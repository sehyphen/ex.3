<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie ? movie.Title.replace(/['"]+/g, '') : 'Movie' %> - Reviews</title>
    <meta name="description" content="Read reviews and ratings for <%= movie ? movie.Title : 'this movie' %> (<%= movie ? movie.Year : '' %>).">
    <link rel="stylesheet" href="/movie.css">
    <link href="./images/rotten.gif" type="image/gif" rel="shortcut icon" />
</head>
<body>
    <div class="banner">
        <img src="./images/bannerbg.png" alt="Banner">
    </div>
    
    <h1><%= movie ? movie.Title + ' (' + movie.Year + ')' : 'Movie not found' %></h1>
    
    <% if (movie) { %>
    <div class="Rating">
        <img src="/images/<%= 95 >= 60 ? 'freshbig.png' : 'rottenbig.png' %>" alt="Score">
        <span>95% <%= 95 >= 60 ? 'FRESH' : 'ROTTEN' %></span>
    </div>
    <% } %>
    
    <div class="contaniner">
        <div class="contant">
            <section class="reviews-section">
                <h3>Critics Reviews</h3>
                <% if (reviews && reviews.length > 0) { %>
                    <% reviews.forEach((review, index) => { %>
                        <div class="review <%= index % 2 === 0 ? 'review-left' : 'review-mid' %>">
                            <img src="/images/<%= review.rating === 'FRESH' ? 'fresh.gif' : 'rotten.gif' %>" class="icon" alt="Review Icon">
                            <p><q><%= review.review_text %></q></p>
                            <div class="review-details">
                                <img src="/images/critic.gif" class="critic-icon" alt="Critic Icon">
                                <span><%= review.reviewer %>, <%= review.publication %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No reviews available.</p>
                <% } %>
            </section>
        </div>
        
        <% if (movie) { %>
        <div class="right">
            <div class="right-cont">
                <h3>General Overview</h3>
                <dl>
                    <dt>Director:</dt>
                    <dd><%= movie.director %></dd>
                    <dt>Starring:</dt>
                    <dd><%= movie.starring %></dd>
                    <dt>Genre:</dt>
                    <dd><%= movie.genre %></dd>
                    <dt>Release Date:</dt>
                    <dd><%= movie.release_date %></dd>
                    <dt>Box Office:</dt>
                    <dd>$<%= movie.box_office %> million</dd>
                </dl>
            </div>
            <div class="poster">
                <img src="/images/poster.jpg" alt="Movie Poster">
            </div>
        </div>
        <% } %>
    </div>
    
    <footer class="footer">
        <p>(1-<%= reviews ? reviews.length : 0 %> of <%= reviews ? reviews.length : 0 %>)</p>
    </footer>
</body>
</html>
