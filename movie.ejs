<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= movie.Title %> - Tomatoes Rancid</title>
    <link rel="stylesheet" href="/movie.css">
</head>
<body>
    <div class="banner">
        <img src="/images/banner.png" alt="Tomatoes Rancid">
    </div>
    <h1><%= movie.Title %> (<%= movie.Year %>)</h1>
    
    <div class="container">
        <div class="rating-section">
            <div class="rating">
                <img src="/images/<%= movie.Score >= 60 ? 'freshbig.png' : 'rottenbig.png' %>" alt="Rating">
                <span><%= movie.Score %>%</span>
            </div>
        </div>
        
        <div class="content">
            <div class="left">
                <div class="reviews-section">
                    <% reviews.forEach(function(review) { %>
                        <div class="review">
                            <div class="review-content">
                                <img src="/images/<%= review.rating === 'FRESH' ? 'fresh.gif' : 'rotten.gif' %>" alt="Review">
                                <q><%= review.review_text %></q>
                            </div>
                            <div class="review-details">
                                <img src="/images/critic.gif" alt="Critic">
                                <p><%= review.reviewer %> <br><%= review.publication %></p>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>

            <div class="right">
                <div>
                    <img src="<%= posterPath %>" alt="Movie Poster">
                </div>
            </div>

            <div class="movie-info">
                <dl>
                    <dt>Starring</dt>
                    <dd><%= movie.starring || 'N/A' %></dd>

                    <dt>Director</dt>
                    <dd><%= movie.director || 'N/A' %></dd>

                    <dt>Producer</dt>
                    <dd><%= movie.producer || 'N/A' %></dd>

                    <dt>Screenwriter</dt>
                    <dd><%= movie.screenwriter || 'N/A' %></dd>

                    <dt>Rating</dt>
                    <dd><%= movie.rating || 'N/A' %></dd>

                    <dt>Release Date</dt>
                    <dd><%= movie.releaseDate || 'N/A' %></dd>

                    <dt>Runtime</dt>
                    <dd><%= movie.runtime || 'N/A' %></dd>

                    <dt>Synopsis</dt>
                    <dd><%= movie.synopsis || 'N/A' %></dd>

                    <dt>Release Company</dt>
                    <dd><%= movie.releaseCompany || 'N/A' %></dd>
                </dl>
            </div>
        </div>
        
        <div class="footer">
            (1-<%= reviews.length %> of <%= reviews.length %>)
        </div>
    </div>
    
    <!-- חיבור לקובץ ה-JS -->
    <script src="/script.js"></script>
</body>

</html>

